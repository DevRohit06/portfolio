<div class={`skills-container relative ${className}`}>
  <div
    class="border border-border p-4 sm:p-6 md:p-12 relative skills-title-section"
  >
    <div class="size-4 bg-border absolute -top-2 -left-2"></div>
    <Badge size="sm" className="mb-4">
      <span class="text-xs font-bold uppercase">Technical Skills</span>
    </Badge>

    <TextReveal
      element="h2"
      text="My Toolkit"
      className="text-3xl sm:text-4xl md:text-5xl font-semibold skills-title split-text"
      splitBy="chars"
      stagger={0.03}
      from="bottom"
    />
  </div>

  <div
    class="border border-border border-t-0 p-4 sm:p-6 md:p-12 skills-content-section"
  >
    <div class="space-y-8">
      {
        skillCategories.map((category, categoryIndex) => (
          <div class="skill-category" data-category={categoryIndex}>
            <h3 class="text-lg font-semibold mb-4 category-title text-text-primary">
              {category.title}
            </h3>

            <div class="flex flex-wrap gap-3 items-center">
              {category.skills.map((skill, skillIndex) => (
                <div
                  class="skill-pill inline-flex items-center gap-2 px-4 py-2 border border-border text-sm font-medium hover:bg-accent/80"
                  data-skill={skillIndex}
                >
                  <iconify-icon icon={skill.icon} class="skill-icon" />
                  <span class="skill-name">{skill.name}</span>
                </div>
              ))}
            </div>
          </div>
        ))
      }
    </div>
  </div>

