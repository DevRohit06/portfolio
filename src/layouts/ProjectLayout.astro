---
import "../styles/global.css";
import "lenis/dist/lenis.css";
import Seo from "../components/Seo.astro";
import { PUBLIC_GOOGLE_TAG_KEY } from "astro:env/client";

interface Props {
  title?: string;
  description?: string;
  image?: string;
  canonicalURL?: string;
  technologies?: string[];
  github?: string;
  npm?: string;
  demo?: string;
  status?: string;
}

const {
  title = "Project",
  description = "A project showcase",
  image = "/images/og.webp",
  canonicalURL = Astro.url.href,
  technologies = [],
  github,
  npm,
  demo,
  status = "In Development",
} = Astro.props;

const googleTagKey = PUBLIC_GOOGLE_TAG_KEY;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no"
    />
    
    <!-- Theme initialization script -->
    <script is:inline src="/theme-init.js"></script>
    
    <!-- SEO Component -->
    <Seo
      slot="seo"
      title={title}
      description={description}
      openGraph={{
        basic: {
          title: title,
          type: "website",
          image: image,
        },
        optional: {
          siteName: "Rohit Kushwaha",
          description: description,
          locale: "en_US",
        },
      }}
      twitter={{
        card: "summary_large_image",
        site: "@rohitk_06",
        creator: "@rohitk_06",
        title: title,
        description: description,
        image: image,
      }}
      extend={{
        link: [{ rel: "canonical", href: canonicalURL }],
      }}
    />
  </head>
  <body class="bg-[var(--bg-primary)] text-[var(--text-primary)]">
    <!-- Theme initialization script - runs before anything renders -->
    <script is:inline src="/theme-init.js"></script>

    <!-- Google Analytics -->
    {
      googleTagKey && (
        <script async src={`https://www.googletagmanager.com/gtag/js?id=${googleTagKey}`}></script>
      )
    }
    {
      googleTagKey && (
        <script is:inline define:vars={{ googleTagKey }}>
          window.dataLayer = window.dataLayer || [];
          function gtag() {
            dataLayer.push(arguments);
          }
          gtag("js", new Date());
          gtag("config", googleTagKey, { anonymize_ip: true });
        </script>
      )
    }

    <!-- Navigation -->
    <nav class="fixed top-0 left-0 right-0 z-50 bg-[var(--bg-primary)]/80 backdrop-blur-md border-b border-[var(--border-color)]">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-4 flex items-center justify-between">
        <a href="/" class="text-xl font-bold text-[var(--text-primary)] hover:text-[var(--accent-primary)] transition-colors">
          Rohit
        </a>
        <a href="/#projects" class="text-sm font-medium text-[var(--text-secondary)] hover:text-[var(--accent-primary)] transition-colors">
          ← Back to Projects
        </a>
      </div>
    </nav>

    <!-- Main Content -->
    <main class="min-h-screen pt-24 pb-16">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-4xl">
        
        <!-- Header Section -->
        <div class="mb-12">
          <div class="flex items-center justify-between mb-6">
            <div>
              <h1 class="text-4xl sm:text-5xl font-bold text-[var(--text-primary)] mb-2">
                {title}
              </h1>
              <p class="text-lg text-[var(--text-secondary)]">
                {description}
              </p>
            </div>
            <div class="hidden sm:flex items-center gap-2">
              <span class={`px-3 py-1 rounded-full text-sm font-medium ${
                status === 'Completed' 
                  ? 'bg-green-500/20 text-green-400' 
                  : 'bg-yellow-500/20 text-yellow-400'
              }`}>
                {status}
              </span>
            </div>
          </div>

          <!-- Links Section -->
          <div class="flex flex-wrap gap-4 mb-8">
            {github && (
              <a
                href={github}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-2 px-4 py-2 bg-[var(--bg-card)] hover:bg-[var(--bg-tertiary)] border border-[var(--border-color)] hover:border-[var(--accent-primary)] rounded-lg text-[var(--text-secondary)] hover:text-[var(--accent-primary)] transition-all duration-300"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
                GitHub
              </a>
            )}
            {npm && (
              <a
                href={npm}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-2 px-4 py-2 bg-[var(--bg-card)] hover:bg-[var(--bg-tertiary)] border border-[var(--border-color)] hover:border-[var(--accent-primary)] rounded-lg text-[var(--text-secondary)] hover:text-[var(--accent-primary)] transition-all duration-300"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M0 7.334v8h6.666v1.332H12v-1.332h12v-8H0zm6.666 6.664H5.334v-4H3.999v4H1.335V8.667h5.331v5.331zm4 0v1.336H8.001V8.667h5.334v5.332h-2.669v-.001zm12.001 0h-1.33v-4h-1.336v4h-1.335v-4h-1.33v4h-2.671V8.667h8.002v5.331zM10.665 10H12v2.667h-1.335V10z"/>
                </svg>
                NPM
              </a>
            )}
            {demo && (
              <a
                href={demo}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-2 px-4 py-2 bg-[var(--accent-primary)] hover:bg-[var(--accent-primary)]/80 text-white rounded-lg font-medium transition-all duration-300"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                </svg>
                Live Demo
              </a>
            )}
          </div>
        </div>

        <!-- Technologies Section -->
        {technologies.length > 0 && (
          <div class="mb-16 p-6 bg-[var(--bg-card)] border border-[var(--border-color)] rounded-lg">
            <h2 class="text-2xl font-bold text-[var(--text-primary)] mb-4">Technologies Used</h2>
            <div class="flex flex-wrap gap-3">
              {technologies.map((tech) => (
                <span class="px-4 py-2 bg-[var(--bg-tertiary)] text-[var(--text-secondary)] hover:text-[var(--accent-primary)] rounded-full text-sm font-medium border border-[var(--border-color)] transition-colors cursor-default">
                  {tech}
                </span>
              ))}
            </div>
          </div>
        )}

        <!-- Project Content -->
        <div class="prose prose-invert max-w-none mb-16">
          <slot />
        </div>

      </div>
    </main>

    <!-- Footer -->
    <footer class="border-t border-[var(--border-color)] bg-[var(--bg-card)] mt-16">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-8 text-center text-[var(--text-secondary)]">
        <p>© 2025 Rohit Kushwaha. All rights reserved.</p>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  /* Prose styling to match portfolio theme */
  .prose {
    --prose-body: var(--text-secondary);
    --prose-headings: var(--text-primary);
    --prose-links: var(--accent-primary);
    --prose-code: var(--text-primary);
    --prose-pre-bg: var(--bg-card);
    --prose-pre-border: var(--border-color);
    --prose-hr: var(--border-color);
    --prose-td-border: var(--border-color);
  }

  .prose h1,
  .prose h2,
  .prose h3,
  .prose h4,
  .prose h5,
  .prose h6 {
    color: var(--text-primary);
    font-weight: 600;
    margin-top: 1.5em;
    margin-bottom: 0.5em;
  }

  .prose p {
    color: var(--text-secondary);
    line-height: 1.8;
    margin-bottom: 1.5em;
  }

  .prose a {
    color: var(--accent-primary);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s ease;
  }

  .prose a:hover {
    text-decoration: underline;
  }

  .prose code {
    background: var(--bg-tertiary);
    color: var(--text-primary);
    padding: 0.2em 0.4em;
    border-radius: 3px;
    font-size: 0.9em;
  }

  .prose pre {
    background: var(--bg-card);
    border: 1px solid var(--border-color);
    padding: 1em;
    border-radius: 8px;
    overflow-x: auto;
  }

  .prose pre code {
    background: none;
    color: inherit;
    padding: 0;
  }

  .prose ul,
  .prose ol {
    color: var(--text-secondary);
    margin-bottom: 1.5em;
  }

  .prose li {
    margin-bottom: 0.5em;
  }

  .prose blockquote {
    color: var(--text-secondary);
    border-left-color: var(--accent-primary);
    background: rgba(88, 101, 242, 0.05);
    padding: 1em;
    border-radius: 4px;
  }

  .prose table {
    border-collapse: collapse;
    width: 100%;
  }

  .prose table thead {
    background: var(--bg-tertiary);
  }

  .prose table th,
  .prose table td {
    padding: 0.75em;
    text-align: left;
    border: 1px solid var(--border-color);
  }

  .prose table th {
    color: var(--text-primary);
    font-weight: 600;
  }

  .prose table td {
    color: var(--text-secondary);
  }

  .prose hr {
    border-color: var(--border-color);
    margin: 2em 0;
  }

  /* Highlight.js integration for code blocks */
  .prose pre code[class*="language-"] {
    background: none;
    color: inherit;
  }

  .hljs {
    background: var(--bg-card) !important;
    color: var(--text-primary) !important;
  }

  .hljs-string {
    color: #98c379;
  }

  .hljs-number {
    color: #d19a66;
  }

  .hljs-literal {
    color: #56b6c2;
  }

  .hljs-attr {
    color: #61afef;
  }

  .hljs-title {
    color: #61afef;
  }

  .hljs-name {
    color: #e06c75;
  }

  .hljs-type {
    color: #61afef;
  }

  .hljs-symbol {
    color: #56b6c2;
  }

  .hljs-bullet {
    color: #56b6c2;
  }

  .hljs-section {
    color: #61afef;
  }

  .hljs-keyword {
    color: #c678dd;
  }

  .hljs-selector-tag {
    color: #e06c75;
  }

  .hljs-literal {
    color: #56b6c2;
  }

  .hljs-comment {
    color: #5c6370;
  }

  .hljs-meta {
    color: #5c6370;
  }
</style>
