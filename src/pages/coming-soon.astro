---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import { socials } from "../lib/socials";
import SocialIcons from "../components/SocialIcons.astro";
---

<Layout title="Coming Soon - Rohit Kushwaha">
  <Navbar />

  <main class="coming-soon-page min-h-screen flex items-center justify-center">
    <div
      class="w-[90%] md:w-[80%] lg:w-[60%] mx-auto flex flex-col items-center justify-center text-center p-8 mt-[-100px]"
    >
      <h1
        class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold mb-6 coming-soon-title"
      >
        Coming Soon
      </h1>
      <p
        class="text-[var(--text-secondary)] text-lg sm:text-xl md:text-2xl mb-8 max-w-2xl"
      >
        This page is currently under construction. Check back soon for updates!
      </p>
      <div class="w-16 h-1 bg-[var(--accent-primary)] mb-8"></div>
      <p class="text-[var(--text-secondary)] mb-8">
        In the meantime, you can connect with me on social media:
      </p>
      <div class="social-links flex space-x-4 mb-12">
        <SocialIcons variant="button" size="lg" />
      </div>
      <a
        href="/"
        class="border border-[var(--border-color)] hover:text-[var(--accent-primary)] hover:border-[var(--accent-primary)] px-6 py-3 transition-all duration-300 group flex items-center"
      >
        <span>Return to Home</span>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="ml-2 group-hover:translate-x-1 transition-transform duration-300"
          ><path d="m9 18 6-6-6-6"></path></svg
        >
      </a>
    </div>
  </main>

  <style>
    @keyframes gradient {
      0% {
        background-position: 0% 50%;
      }
      50% {
        background-position: 100% 50%;
      }
      100% {
        background-position: 0% 50%;
      }
    }

    .coming-soon-title {
      background: linear-gradient(
        -45deg,
        var(--accent-primary),
        #8b3acf,
        var(--accent-primary)
      );
      background-size: 200% 200%;
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      animation: gradient 6s ease infinite;
    }

    @media (prefers-reduced-motion: reduce) {
      .coming-soon-title {
        animation: none;
      }
    }
  </style>
</Layout>
