---
import Badge from "./Badge.astro";
import dialogh from "../assets/dialogh.png";
interface Props {
  title?: string;
  learnMoreUrl?: string;
}
import { Image } from "astro:assets";

const { title = "TECH COMMUNITY", learnMoreUrl = "#" } = Astro.props;
---

<div
  class="relative border border-[#7B7B7B] h-full w-full overflow-hidden group"
>
  <div class="absolute top-2 left-2">
    <Badge>{title}</Badge>
  </div>
  <Image src={dialogh} class="aspect-video object-center object-cover" alt="" />
  <div class="p-2 border-t border-[#7B7B7B]">
    <p>Become the member of Dialogh</p>
    <a
      href={learnMoreUrl}
      class="text-[#0000CC] relative group inline-flex items-center"
      >Learn more
      <span
        class="absolute bottom-0 left-0 w-0 h-0.5 bg-[#0000CC] group-hover:w-full transition-all duration-300"
      ></span>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-3 w-0 ml-0 transition-all duration-300 group-hover:w-3 group-hover:ml-1"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
      </svg>
    </a>
  </div>
</div>
